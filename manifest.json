{
  "manifest_version": 3,
  "name": "Buscador de Vagas",
  "version": "1.5",
  "description": "Busque e salve vagas favoritas das principais plataformas.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Abrir Buscador de Vagas",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}